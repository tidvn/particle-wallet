{
    "name": "@particle-network/thresh-sig",
    "version": "0.7.8",
    "type": "module",
    "files": [
        "dist",
        "esm",
        "wasm"
    ],
    "main": "dist/index.js",
    "module": "esm/index.js",
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "echo '{ \"type\": \"commonjs\" }' > dist/package.json &&  node build.js && npm run cp-wasm",
        "build:dev": "NODE_ENV=development npm run build",
        "build:watch": "npm run build --watch",
        "dev": "npm run clean && NODE_ENV=development npm run build:watch & NODE_ENV=development npm run typegen:watch",
        "prepare": "npm run build",
        "prebuild": "npm run typegen",
        "typecheck": "tsc --noEmit",
        "typegen": "tsc --emitDeclarationOnly || true",
        "typegen:watch": "tsc --emitDeclarationOnly --watch",
        "clean": "rm -rf ./dist && rm -rf ./esm && rm -rf ./wasm",
        "cp-wasm": "rm -rf wasm && mkdir wasm && cp -rf ./src/wasm/thresh_sig_wasm_bg.wasm ./wasm/thresh_sig_wasm_bg.wasm",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
        "@ethereumjs/tx": "^4.2.0",
        "@types/elliptic": "^6.4.14",
        "buffer": "^6.0.3",
        "elliptic": "^6.5.4"
    },
    "devDependencies": {
        "esbuild": "^0.15.10",
        "esbuild-plugin-replace": "^1.4.0",
        "prettier": "^2.6.2"
    }
}
